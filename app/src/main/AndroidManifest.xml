<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jennatauro.livefit" >

    <application
        android:allowBackup="true"
        android:name=".LivefitApplication"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.FitnessActivity"
            android:label="@string/fitness" >

        </activity>

        <activity
            android:name=".ui.activities.AddWorkoutActivity"
            android:label="@string/add_workout" >

        </activity>
    </application>

</manifest>
