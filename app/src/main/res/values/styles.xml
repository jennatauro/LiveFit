<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="vpiTabPageIndicatorStyle">@style/MainCustomTabPageIndicator</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:background">#6A94D4</item>
    </style>

    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColorHint">@color/hint_text_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="MainCustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:background">@color/tab_background</item>
        <item name="android:textColor">@drawable/selector_tab_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="fontPath">fonts/ProximaNova-Regular.otf</item>
    </style>




</resources>
