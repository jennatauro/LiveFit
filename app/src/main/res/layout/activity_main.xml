<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_grey_background">

    <android.support.v7.widget.Toolbar
        style="@style/ToolbarStyle"
        android:id="@+id/main_activity_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"/>

    <!--Fitness-->

    <LinearLayout
        android:id="@+id/ll_fitness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_dumbbell"
            android:background="@drawable/yellow_circle_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitness"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"/>

    </LinearLayout>


    <!--Health-->

    <LinearLayout
        android:id="@+id/ll_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_apple_black_silhouette"
            android:background="@drawable/yellow_circle_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <!--Measurements-->

    <LinearLayout
        android:id="@+id/ll_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_trophy_icon_614x460"
            android:background="@drawable/yellow_circle_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>
